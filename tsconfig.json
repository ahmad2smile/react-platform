{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom", "dom.iterable"],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "jsx": "preserve",
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["./"]
}
